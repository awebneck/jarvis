#!/bin/bash
if [ -f "/etc/debian_version" ]; then
    install -m 0755 bin/defaults /etc/default/jarvis
    install -m 0755 bin/init-script.debian /etc/init.d/jarvis
fi
if [ -f "/etc/redhat-release" ]; then
    install -m 0755 bin/defaults /etc/sysconfig/jarvis
    install -m 0755 bin/init-script.redhat /etc/init.d/jarvis
fi

